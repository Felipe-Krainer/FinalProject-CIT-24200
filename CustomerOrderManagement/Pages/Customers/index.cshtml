@page
@model CustomerOrderManagement.Pages.Customers.IndexModel
@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>

<!-- Search Form -->
<form method="get" class="mb-3">
    <input type="text" name="SearchTerm" value="@Model.SearchTerm" placeholder="Search customers..." class="form-control" />
    <button type="submit" class="btn btn-primary mt-2">Search</button>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Company Name</th>
            <th>Contact Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var customer in Model.Customers)
    {
        <tr>
            <td>@customer.CustomerID</td>
            <td>@customer.CompanyName</td>
            <td>@customer.ContactName</td>
            <td>
                <a asp-page="./Edit" asp-route-id="@customer.CustomerID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@customer.CustomerID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@customer.CustomerID">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>
