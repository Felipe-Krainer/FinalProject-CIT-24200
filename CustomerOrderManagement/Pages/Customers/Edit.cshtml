@page "{id}"
@model CustomerOrderManagement.Pages.Customers.EditModel
@{
    ViewData["Title"] = "Edit Customer";
}

<h1>Edit Customer</h1>

<form method="post">
    <div class="form-group">
        <label for="CustomerID">Customer ID</label>
        <input id="CustomerID" name="Customer.CustomerID" value="@Model.Customer.CustomerID" class="form-control" readonly />
    </div>
    <div class="form-group">
        <label for="CompanyName">Company Name</label>
        <input id="CompanyName" name="Customer.CompanyName" value="@Model.Customer.CompanyName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="ContactName">Contact Name</label>
        <input id="ContactName" name="Customer.ContactName" value="@Model.Customer.ContactName" class="form-control" />
    </div>
    <div class="form-group">
        <label for="Country">Country</label>
        <input id="Country" name="Customer.Country" value="@Model.Customer.Country" class="form-control" />
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
