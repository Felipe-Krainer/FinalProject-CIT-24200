@page "{id}"
@model CustomerOrderManagement.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Delete Customer</h1>

<!-- Display validation errors -->
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Customer ID</dt>
        <dd class="col-sm-10">@Model.Customer.CustomerID</dd>

        <dt class="col-sm-2">Company Name</dt>
        <dd class="col-sm-10">@Model.Customer.CompanyName</dd>

        <dt class="col-sm-2">Contact Name</dt>
        <dd class="col-sm-10">@Model.Customer.ContactName</dd>
    </dl>
    <form method="post">
        <!-- Ensure the CustomerID is passed as part of the form -->
        <input type="hidden" name="id" value="@Model.Customer.CustomerID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
