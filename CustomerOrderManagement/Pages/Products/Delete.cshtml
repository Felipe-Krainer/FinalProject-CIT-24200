@page "{id:int}"
@model CustomerOrderManagement.Pages.Products.DeleteModel
@{
    ViewData["Title"] = "Delete Product";
}

<h1>Delete Product</h1>

<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<div>
    <h4>Product</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Product Name</dt>
        <dd class="col-sm-10">@Model.Product.ProductName</dd>

        <dt class="col-sm-2">Unit Price</dt>
        <dd class="col-sm-10">@Model.Product.UnitPrice?.ToString("C")</dd>

        <dt class="col-sm-2">Units In Stock</dt>
        <dd class="col-sm-10">@Model.Product.UnitsInStock</dd>
    </dl>
    <form method="post">
        <input type="hidden" asp-for="Product.ProductID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
