@page
@model CustomerOrderManagement.Pages.Orders.CreateModel
@{
    ViewData["Title"] = "Create Order";
}

<h1>Create Order</h1>

<form method="post">
    <div class="form-group">
        <label for="CustomerID">Customer ID</label>
        <input id="CustomerID" name="Order.CustomerID" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="OrderDate">Order Date</label>
        <input id="OrderDate" name="Order.OrderDate" type="date" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-page="./Index" class="btn btn-secondary">Cancel</a>
</form>
